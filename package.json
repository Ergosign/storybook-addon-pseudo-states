{
  "name": "@ergosign/storybook-pseudo-states",
  "version": "0.0.1",
  "description": "Storybook decorator to enable automatic generation and displaying of CSS pseudo states for components.",
  "keywords": [
    "storybook",
    "storybookjs",
    "addon",
    "decorator",
    "pseudo states",
    "css",
    "angular",
    "components",
    "tool",
    "ui",
    "user interface"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Ergosign/storybook-addon-pseudo-states"
  },
  "directories": {
    "test": "test",
    "dist": "dist"
  },
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "lint-fix": "eslint src/**/*.ts --fix",
    "angular:build": "tsc --p src/angular",
    "angular:pack": "cd src/angular && npm pack",
    "prettier": "prettier --config .prettierrc --write src/**/*.{ts,tsx}",
    "pretty-quick": "pretty-quick --staged",
    "react:build": "tsc --p src/react",
    "react:pack": "cd src/react && npm pack",
    "vue:build": "tsc --p src/vue",
    "vue:pack": "cd src/vue && npm pack",
    "html:build": "tsc --p src/html",
    "html:pack": "cd src/html && npm pack",
    "lit:build": "tsc --p src/lit",
    "lit:pack": "cd src/lit && npm pack",
    "lerna:bootstrap": "lerna bootstrap",
    "lerna:version": "lerna version",
    "lerna:build-all": "lerna run build",
    "lerna:publish": "lerna publish prerelease",
    "lerna:publish-version": "lerna publish prerelease --force-publish --conventional-commits --create-release github",
    "lerna:publish:github": "lerna publish --registry https://npm.pkg.github.com/",
    "publish-manual": "npm publish --access public",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "author": "philippone",
  "license": "MIT",
  "devDependencies": {
    "@angular/core": "9.1.7",
    "@babel/core": "7.9.6",
    "@storybook/angular": "5.3.18",
    "@storybook/addons": "5.3.18",
    "@storybook/api": "5.3.18",
    "@storybook/cli": "5.3.18",
    "@storybook/client-api": "5.3.18",
    "@storybook/html": "5.3.18",
    "@types/node": "14.11.2",
    "@types/react": "16.9.35",
    "@types/react-dom": "16.9.8",
    "@types/webpack": "4.41.13",
    "@typescript-eslint/eslint-plugin": "4.3.0",
    "@typescript-eslint/parser": "4.3.0",
    "babel-loader": "8.1.0",
    "cz-conventional-changelog": "3.3.0",
    "emotion": "10.0.27",
    "eslint": "7.10.0",
    "eslint-config-airbnb": "18.2.0",
    "eslint-config-prettier": "6.12.0",
    "eslint-config-standard": "14.1.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.21.2",
    "eslint-plugin-react-hooks": "4.1.2",
    "eslint-plugin-standard": "4.0.1",
    "eslint-plugin-jest": "24.0.2",
    "husky": "4.3.0",
    "lerna": "3.22.1",
    "lint-staged": "10.4.0",
    "lit-html": "1.3.0",
    "postcss-loader": "4.0.2",
    "postcss-pseudo-classes": "0.3.0",
    "prettier": "2.1.2",
    "pretty-quick": "3.0.2",
    "typescript": "4.0.3",
    "vue": "2.6.11",
    "vue-class-component": "7.2.3",
    "webpack": "4.43.0",
    "zone.js": "0.10.3",
    "jest": "26.4.2",
    "@types/jest": "26.0.14",
    "ts-jest": "26.4.1"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "private": true,
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{scss}": [
      "eslint --fix"
    ],
    "*.{json}": [
      "eslint --fix"
    ],
    "*.{js,jsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --cache --fix"
    ]
  }
}
